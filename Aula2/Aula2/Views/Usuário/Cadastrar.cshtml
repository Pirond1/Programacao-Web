@model UsuárioModels;
@{
    ViewData["Title"] = "Cadastrar";
}

<h1>Cadastrar</h1>

<div class="container">
    <form method="post" asp-controller="Usuário" asp-action="Salvar">
        <div class="form-group col-12">
            <label>Código</label>
            <input type="text" asp-for="id" readonly class="form-control" />
        </div>
        <div class="form-group col-12">
            <label>Nome</label>
            <input type="text" asp-for="nome" class="form-control" />
        </div>
        <div class="form-group col-12">
            <label>Senha</label>
            <input type="password" asp-for="senha" class="form-control" />
        </div>
        <div class="form-group col-12">
            <label>Email</label>
            <input type="email" asp-for="email" class="form-control" />
        </div>
        <div class="form-group col-12">
            <label>Data de Nascimento</label>
            <input type="date" asp-for="datanascimento" class="form-control" />
        </div>
        <div class="form-group col-12">
            <button type="submit" class="btn btn-success">Salvar</button>
        </div>
        <span>@ViewBag.mensagem</span>
    </form>
</div>
