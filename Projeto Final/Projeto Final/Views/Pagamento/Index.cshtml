@model ProjetoFinal.DTOs.PagamentoDTO
@{
    ViewData["Title"] = "Index";
}

<h1>Pagamento</h1>

<div class="col-3">
    <a asp-action="Listar" asp-controller="Pagamento"
       class="btn btn-info">
        Listar
    </a>
</div>

<form asp-action="Salvar" asp-controller="Pagamento" method="post">
    <input type="hidden" asp-for="id" />

    <div class="form-group">
        <label asp-for="descricao"></label>
        <input type="text" asp-for="descricao" class="form-control" />
        <span class="text-danger" asp-validation-for="descricao">
        </span>
    </div>

    <div>
        <span class="@ViewBag.classe">@ViewBag.mensagem</span>
    </div>

    <div class="form-group row mt-3">
        <div class="col-3">
            <button type="submit" class="btn btn-success">
                Salvar
            </button>
        </div>
        <div class="col-3">
            <a asp-action="Index" asp-controller="Pagamento" class="btn btn-success">
                Novo
            </a>
        </div>
    </div>
</form>

