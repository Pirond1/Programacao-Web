@model IEnumerable<ProjetoFinal.DTOs.ServicoDTO>
@{
    ViewData["Title"] = "Listar";
}

<h1>Listar</h1>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Código</th>
            <th scope="col">Descrição</th>
            <th scope="col">Valor Hora</th>
            <th scope="col">ID Área</th>
            <th scope="col">Alterar</th>
            <th scope="col">Excluir</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.id</th>
                <td>@item.descricao</td>
                <td>@item.valorHora</td>
                <td>@item.idArea</td>
                <td>
                    <a asp-action="PreAlterar"
                       asp-controller="Servico"
                       asp-route-id="@item.id"
                       class="btn btn-success">Alterar</a>
                </td>
                <td>
                    <form asp-action="Excluir" asp-controller="Servico"
                          asp-route-id="@item.id" method="get">

                        <button type="submit" class="btn btn-danger"
                                onclick="return confirm('Confirma a exclusão?') ">
                            Excluir
                        </button>
                    </form>


                </td>
            </tr>
        }
    </tbody>
</table>