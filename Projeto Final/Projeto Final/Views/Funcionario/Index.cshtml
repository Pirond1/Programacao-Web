@model ProjetoFinal.DTOs.FuncionarioDTO
@{
    ViewData["Title"] = "Funcionário";
}

<h1>Funcionário</h1>

<div class="form-actions mb-4">
    <a asp-action="Listar" asp-controller="Funcionario"
       class="btn btn-list">
        Listar
    </a>
</div>

<form asp-action="Salvar" asp-controller="Funcionario" method="post">
    <input type="hidden" asp-for="id" />

    <div class="form-group">
        <label asp-for="nome"></label>
        <input type="text" asp-for="nome" class="form-control" placeholder="Nome" />
        <span class="text-danger" asp-validation-for="nome">
        </span>
    </div>

    <div class="form-group">
        <label asp-for="usuario"></label>
        <input type="text" asp-for="usuario" class="form-control" placeholder="Usuário" />
        <span class="text-danger" asp-validation-for="usuario">

        </span>
    </div>

    <div class="form-group">
        <label asp-for="senha"></label>
        <input asp-for="senha" type="password" class="form-control" placeholder="Senha" />
        <span class="text-danger" asp-validation-for="senha"></span>
    </div>

    <div class="form-group">
        <label asp-for="salario"></label>
        <input asp-for="salario" type="number" class="form-control" placeholder="Salário" />
        <span class="text-danger" asp-validation-for="salario"></span>
    </div>

    <div class="form-group">
        <label asp-for="dataNascimento"></label>
        <input asp-for="dataNascimento" type="date" class="form-control" />
        <span class="text-danger" asp-validation-for="dataNascimento"></span>
    </div>

    <div class="form-group">
        <label asp-for="idArea"></label>
        <div class="select-container">
            <select asp-for="idArea" class="form-control" asp-items="@(IEnumerable<SelectListItem>)ViewBag.listaArea">
                <option value="">Escolha uma categoria</option>
            </select>
        </div>
        <span class="text-danger" asp-validation-for="idArea"></span>
    </div>

    <div class="form-message">
        <span class="@ViewBag.classe">@ViewBag.mensagem</span>
    </div>

    <div class="form-buttons">
        <button type="submit" class="btn btn-primary">
            Salvar
        </button>
        <a asp-action="Index" asp-controller="Funcionario" class="btn btn-primary">
            Limpar
        </a>
    </div>

</form>
