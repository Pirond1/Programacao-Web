@model ProjetoFinal.DTOs.FuncionarioDTO;

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <!-- Meta tags Obrigatórias -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/views.css" />

    <title>Login</title>
</head>
<body class="login-page">
    <div class="login-container">
        <h1 class="login-title">Funcionário</h1>

        <form asp-action="Salvar" asp-controller="Funcionario" method="post">
            <input type="hidden" asp-for="id" />

            <div class="form-group">
                <label asp-for="nome"></label>
                <input type="text" asp-for="nome" class="form-control" placeholder="Nome" />
                <span class="text-danger" asp-validation-for="nome">
                </span>
            </div>

            <div class="form-group">
                <label asp-for="usuario"></label>
                <input type="text" asp-for="usuario" class="form-control" placeholder="Usuário" />
                <span class="text-danger" asp-validation-for="usuario">

                </span>
            </div>

            <div class="form-group">
                <label asp-for="senha"></label>
                <input asp-for="senha" type="password" class="form-control" placeholder="Senha" />
                <span class="text-danger" asp-validation-for="senha"></span>
            </div>

            <div class="form-group">
                <label asp-for="salario"></label>
                <input asp-for="salario" type="number" class="form-control" placeholder="Salário" />
                <span class="text-danger" asp-validation-for="salario"></span>
            </div>

            <div class="form-group">
                <label asp-for="dataNascimento"></label>
                <input asp-for="dataNascimento" type="date" class="form-control" />
                <span class="text-danger" asp-validation-for="dataNascimento"></span>
            </div>

            <div class="form-group">
                <label asp-for="idArea"></label>
                <div class="select-container">
                    <select asp-for="idArea" class="form-control" asp-items="@(IEnumerable<SelectListItem>)ViewBag.listaArea">
                        <option value="">Escolha uma categoria</option>
                    </select>
                </div>
                <span class="text-danger" asp-validation-for="idArea"></span>
            </div>

            <div>
                <span class="@ViewBag.classe">@ViewBag.mensagem</span>
            </div>

            <div class="form-group row mt-4">
                <div class="col-md-6 mb-2 mb-md-0">
                    <button type="submit" class="btn btn-success login-btn">
                        Salvar
                    </button>
                </div>
                <div class="col-md-6 mb-2 mb-md-0">
                    <a asp-action="Login" asp-controller="Funcionario" class="btn btn-success login-btn">
                        Logar
                    </a>
                </div>
            </div>

        </form>
    </div>
    <!-- JavaScript (Opcional) -->
    <!-- jQuery primeiro, depois Popper.js, depois Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
</body>
</html>