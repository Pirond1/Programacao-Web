@model ProjetoFinal.DTOs.ConsultaDTO
@{
    ViewData["Title"] = "Index";
}

<link rel="stylesheet" href="~/css/views.css" />

<h1>Consulta</h1>

<form asp-action="Salvar" asp-controller="Consulta" method="post">
    <input type="hidden" asp-for="id" />

    <div class="form-group">
        <label asp-for="horas"></label>
        <input type="text" asp-for="horas" class="form-control" />
        <span class="text-danger" asp-validation-for="horas">
        </span>
    </div>

    <div class="form-group">
        <label asp-for="dataConsulta"></label>
        <input type="datetime-local" asp-for="dataConsulta" class="form-control" />
        <span class="text-danger" asp-validation-for="dataConsulta">

        </span>
    </div>

    <div class="form-group">
        <label asp-for="valorTotal"></label>
        <input asp-for="valorTotal" type="text" class="form-control" />
        <span class="text-danger" asp-validation-for="valorTotal"></span>
    </div>

    <div class="form-group">
        <label asp-for="idServico"></label>
        <select asp-for="idServico" class="form-control">
            <option value="">Escolha uma categoria</option>
            <option value="1">Serviço</option>
        </select>
        <span class="text-danger" asp-validation-for="idServico"></span>
    </div>

    <div class="form-group">
        <label asp-for="idCliente"></label>
        <select asp-for="idCliente" class="form-control">
            <option value="">Escolha uma categoria</option>
            <option value="1">Cliente</option>
        </select>
        <span class="text-danger" asp-validation-for="idCliente"></span>
    </div>

    <div class="form-group">
        <label asp-for="idFuncionario"></label>
        <select asp-for="idFuncionario" class="form-control">
            <option value="">Escolha uma categoria</option>
            <option value="1">Funcionario</option>
        </select>
        <span class="text-danger" asp-validation-for="idFuncionario"></span>
    </div>

    <div class="form-group">
        <label asp-for="idPagamento"></label>
        <select asp-for="idPagamento" class="form-control">
            <option value="">Escolha uma categoria</option>
            <option value="1">Pagamento</option>
        </select>
        <span class="text-danger" asp-validation-for="idPagamento"></span>
    </div>

    <div>
        <span class="@ViewBag.classe">@ViewBag.mensagem</span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-success">
            Salvar
        </button>
    </div>

</form>
