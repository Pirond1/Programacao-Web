@model ProjetoFinal.DTOs.ConsultaDTO
@{
    ViewData["Title"] = "Consulta";
}

<h1>Consulta</h1>

<div class="form-actions mb-4">
    <a asp-action="Listar" asp-controller="Consulta"
       class="btn btn-list">
        Listar
    </a>
</div>

<form asp-action="Salvar" asp-controller="Consulta" method="post">
    <input type="hidden" asp-for="id" />

    <div class="form-group">
        <label asp-for="horas"></label>
        <input type="text" asp-for="horas" class="form-control" placeholder="Horas"/>
        <span class="text-danger" asp-validation-for="horas">
        </span>
    </div>

    <div class="form-group">
        <label asp-for="dataConsulta"></label>
        <input type="datetime-local" asp-for="dataConsulta" class="form-control" placeholder="Data da Consulta" />
        <span class="text-danger" asp-validation-for="dataConsulta">

        </span>
    </div>

    <div class="form-group">
        <label asp-for="valorTotal"></label>
        <input asp-for="valorTotal" type="text" class="form-control" placeholder="Valor Total"/>
        <span class="text-danger" asp-validation-for="valorTotal"></span>
    </div>

    <div class="form-group">
        <label asp-for="idServico"></label>
        <div class="select-container">
            <select asp-for="idServico" class="form-control" asp-items="(List<SelectListItem>)ViewBag.listaServico">
                <option value="">Escolha um Serviço</option>
            </select>
        </div>
        <span class="text-danger" asp-validation-for="idServico"></span>
    </div>

    <div class="form-group">
        <label asp-for="idCliente"></label>
        <div class="select-container">
            <select asp-for="idCliente" class="form-control" asp-items="(List<SelectListItem>)ViewBag.listaCliente">
                <option value="">Escolha um Cliente</option>
            </select>
        </div>
        <span class="text-danger" asp-validation-for="idCliente"></span>
    </div>

    <div class="form-group">
        <label asp-for="idFuncionario"></label>
        <div class="select-container">
            <select asp-for="idFuncionario" class="form-control" asp-items="(List<SelectListItem>)ViewBag.listaFuncionario">
                <option value="">Escolha um Funcionario</option>
            </select>
        </div>
        <span class="text-danger" asp-validation-for="idFuncionario"></span>
    </div>

    <div class="form-group">
        <label asp-for="idPagamento"></label>
        <div class=" select-container">
            <select asp-for="idPagamento" class="form-control" asp-items="(List<SelectListItem>)ViewBag.listaPagamento">
                <option value="">Escolha uma Forma de Pagamento</option>
            </select>
        </div>
        <span class="text-danger" asp-validation-for="idPagamento"></span>
    </div>

    <div>
        <span class="@ViewBag.classe">@ViewBag.mensagem</span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-success">
            Salvar
        </button>
    </div>

</form>
